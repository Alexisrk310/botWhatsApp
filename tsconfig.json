{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "api/**/*.ts",
    "lib/**/*.ts",
    "models/**/*.ts",
    "utils/**/*.ts",
    "types/**/*.d.ts", 
    "node_modules/@types"
  ],
  "exclude": [
    "dist"
  ]
}
